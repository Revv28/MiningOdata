<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <Dialog id="createDialog" title="" type="Message" state="None">
        <content>
            <f:SimpleForm id="simpleForm" editable="true">
                <f:content>
                    <Label text="Location Id" />
                    <Input id="locationId" />

                    <Label text="Location Description" />
                    <Input id="locationDescription" />

                    <Label text="Mining Resource Allocation" />
                    <Input id="miningResourceAllocation" />

                    <Label text="Total Cost" />
                    <Input id="totalCost" />
                </f:content>
            </f:SimpleForm>
        </content>
        <buttons>
            <Button id="idBtnCU" visible='true' text="" press="onCreatePress"/> 
            <Button id="idBtnUpdate" visible='false' text="" press="onCreatePress"/> 

            <Button id="idCancel" text="Cancel" press="onCancelPress"/>
            <!-- create button  -->
        </buttons>
    </Dialog>
</core:FragmentDefinition>
